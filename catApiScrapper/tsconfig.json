{
  "compileOnSave": false,
  "compilerOptions": {
      "rootDir": "src",
      "sourceMap": true,
      "target": "es5",
      "module": "CommonJS",
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "lib": ["es2015", "dom"],
      "baseUrl": "./",
      "typeRoots": [
          "node_modules/@types"
      ],
      "types": [
          "node"
      ],
      "paths": {
          "src/*": ["src/*"]
      }
  },
  "exclude": [
      "node_modules",
      "dist",
      "build"
  ]
  }