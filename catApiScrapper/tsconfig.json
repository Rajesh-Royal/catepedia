{
  "compileOnSave": false,
  "compilerOptions": {
      "rootDir": ".",
      "outDir": "./build",
      "sourceMap": true,
      "target": "es5",
      "module": "CommonJS",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "lib": ["es2015", "dom"],
      "baseUrl": ".",
      "typeRoots": [
          "node_modules/@types"
      ],
      "types": [
          "node"
      ]
  },
  "include": ["./src/**/*.ts",],
  "exclude": [
      "node_modules",
      "dist",
      "build"
  ]
  }